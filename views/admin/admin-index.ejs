<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/calendar.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body class="no-scroll">
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="slider-container">
            <div class="">
                <div class="">
                    <div id="image-slider" class="carousel slide" data-ride="carousel">
                        <!-- <ol class="carousel-indicators">
                            <% if (images.length > 0) { count = 0; %>
                                <% for (let image of images) { %>
                                    <li data-target="#image-slider" data-slide-to="<%= count %>" class="<% if (count === 0) { %>active<% } %>"></li>
                                <% count++; } %> 
                            <% } %>
                        </ol> -->
                        <div class="carousel-inner" role="listbox">
                            <% if (images.length > 0) { count = 0; %>
                                <% for (let image of images) { %>
                                <div class="carousel-item <% if (count === 0) { %>active<% } %>">
                                    <div class="">
                                        <div class="">
                                            <div class="">
                                                <img src="<%= image.imageUrl %>"
                                                    alt="" class="d-block w-100">
                                            </div>
                                            
                                            
                                        </div>
                                    </div>
                                </div>
                                <% count++; } %>
                            <% } else { %>
                                <h1>No images Found!</h1>
                            <% } %>  
                        </div>
                        <div class="card slider-card card-index mb-3 d-block w-100">
                            <div class="row no-gutters">
                                <div class="slider-text">
                                    <div class="col-md-12">
                                        <div class="card-body admin-card">
                                            <% if (!isAuthenticated) { %>
                                                <a href="auth/login" class="faux-button">Login</a>
                                                <a href="auth/signup" class="faux-button">Register</a>
                                            <% } else { %>
                                                <div class="admin-property-dash-ctrls">
                                                    <a href="/admin/properties">Back to My Property List</a>                                                    
                                                </div>
                                                    <h2><%= name %></h2>
                                                    <h4><%= location %></h4>
                                                <a href="/admin/reservations" class="faux-button">Manage Reservations</a>
                                                <a href="/admin/properties/<%= propertyId %>" class="faux-button">Edit Property Details</a>
                                                <a href="/admin/properties/<%= propertyId %>/invite" class="faux-button">Invite Users</a>
                                                <a href="/checklist/new-checklist/<%= propertyId %>" class="faux-button">Manage Checklists</a>
                                                <a href="/inventory/inventory/<%= propertyId %>" class="faux-button">Manage Inventory</a>
                                                <a href="/social/add-post/<%= propertyId %>" class="faux-button">Manage Image Gallery</a>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- <a class="carousel-control-prev" href="#image-slider" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#image-slider" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a> -->
                    </div>
                </div>
            </div>
        </div>          
          
    </main>
<%- include('../includes/end.ejs') %>