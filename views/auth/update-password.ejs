<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <% if (message) { %>
            <div class="user-message"><%= message %></div>
        <% } %>
        <form class="login-form" action="../auth/update-password" method="POST">
            <div class="form-control">
                <label for="password">New Password</label>
                <input type="password" name="password" id="password" value="<%= password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="<%= confirmPassword %>">
            </div>
            <div class="centered">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn_flex" type="submit">Update Password</button>
            </div>
            <div class="centered">
                <a href="../auth/profile">Return to Account</a>
            </div> 
        </form>
    </main>
<%- include('../includes/end.ejs') %>