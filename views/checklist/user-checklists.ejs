<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/user.css">
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <div class="inventory-form centered">
        <h2><%= name %></h2>
        <h4><%= location %></h4>
      </div>
      <% if (checklist.length > 0) { %>
      <form class="inventory-form" action="/checklist/userUpdate" method="POST">
        <h4 class="centered"><%= checklist.title %></h4>
        <div class="centered">
          <h5 class="">Select Checklist to Complete</h5>
        </div>
        <div class="inventory-control">
          <div class="centered">
            <% for (list of checklist) { %>
                <a class="btn" href="/checklist/user-list-update/?listId=<%= list._id %>&propertyId=<%=propertyId%>"><%= list.title %></a>
           <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="propertyId" value="<%= propertyId %>">
          </div>
      </form>
      <% } else { %>
        <div class="inventory-form centered">
          <h4>No checklist is associated with this property.</h4>
        </div>
      <% } %>
      <% if (message) { %>
        <div class="user-message"><%= message %></div>
    <% } %>
    </main>
<%- include('../includes/end.ejs') %>